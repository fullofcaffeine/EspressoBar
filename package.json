{
  "name": "espressobar",
  "version": "1.0.0",
  "description": "A macOS/Linux tray app for accessing pinned org-mode headlines",
  "main": "./out/main/index.js",
  "author": {
    "name": "Marcelo Serpa",
    "email": "hi@fullofcaffeine.com"
  },
  "homepage": "https://github.com/yourusername/espressobar",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/espressobar.git"
  },
  "license": "GPL-3.0-or-later",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "dev:test": "ELECTRON_TEST_MODE=true electron-vite dev",
    "dev:window": "ELECTRON_TEST_MODE=true electron-vite dev",
    "build:nocheck": "electron-vite build",
    "test:direct": "npm run build:nocheck && npx electron out/main/index.js --test-mode",
    "build": "npm run typecheck && electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "electron-vite build && electron-builder --mac",
    "build:linux": "npm run build && electron-builder --linux",
    "preview": "electron-vite preview",
    "pack": "electron-builder",
    "dist": "electron-builder",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.1",
    "@electron-toolkit/utils": "^3.0.0",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.5",
    "@radix-ui/react-tabs": "^1.1.12",
    "@tailwindcss/forms": "^0.5.10",
    "chokidar": "^4.0.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^3.6.0",
    "electron-store": "^10.1.0",
    "electron-traywindow-positioner": "^1.2.1",
    "electron-updater": "^6.3.9",
    "lucide-react": "^0.518.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.6.2",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^3.4.17",
    "zustand": "^5.0.5"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-ts": "^3.0.0",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@playwright/test": "^1.53.1",
    "@types/node": "^22.14.1",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.21",
    "electron": "^34.2.0",
    "electron-builder": "^26.0.17",
    "electron-vite": "^3.1.0",
    "eslint": "^9.24.0",
    "playwright": "^1.53.1",
    "postcss": "^8.4.49",
    "prettier": "^3.5.3",
    "typescript": "^5.8.3",
    "vite": "^6.2.6"
  },
  "resolutions": {
    "@types/node": "^22.0.0"
  }
}
